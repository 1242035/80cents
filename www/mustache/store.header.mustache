<header>
  <div class="container"  data-flex="horizontal grow">
    <a href="/" class="logo" data-flex-grow="min"></a>
    <nav data-flex-grow="max" data-shopio="collections">
      {{#settings.collections}}<a href="/collection/{{id}}">{{title}}</a>{{/settings.collections}}
      {{#settings.pages}}{{#header}}<a href="/{{url_handle}}">{{title}}</a>{{/header}}{{/settings.pages}}
    </nav>
    <nav data-flex-grow="min" data-shopio="session">
      {{#session}}
      <a href="/profile">Account</a>
      <a href="/cart" data-shopio="cart" class="margin-left"><span class="icon cart"></span><small>{{shopping.lines.length}}</small><strong>{{#shopping.amount}}{{shopping.amount}}{{/shopping.amount}}{{^shopping.amount}}0.00{{/shopping.amount}}</strong>{{settings.currency_shortcut}}</a>
      {{/session}}
      {{^session}}
      <button data-action="session" class="primary margin-left">sign in</button>
      {{/session}}
    </nav>
  </div>
</header>
