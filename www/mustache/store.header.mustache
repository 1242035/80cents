<header>
  <a href="/" class="logo"></a>
  <nav data-="menu">
    {{#settings.collections}}<a href="/collection/{{id}}">{{title}}</a>{{/settings.collections}}
    {{#settings.pages}}{{#header}}<a href="/{{url_handle}}">{{title}}</a>{{/header}}{{/settings.pages}}
    {{#session}}
    <a href="/profile"><span class="icon user"></span><abbr>Account</abbr></a>
    {{/session}}
  </nav>
  <nav data-="session">
    {{#session}}
    <a href="/cart" data-="cart"><span class="icon cart"></span><small>{{shopping.lines.length}}</small><strong>{{#shopping.amount}}{{shopping.amount}}{{/shopping.amount}}{{^shopping.amount}}0.00{{/shopping.amount}}</strong>{{settings.currency_shortcut}}</a>
    {{/session}}
    {{^session}}
    <button data-action="session" class="primary margin-left">sign in</button>
    {{/session}}
  </nav>
  <button data-action="menu" class="icon plus"></button>
</header>
