{{! -- COLLECTION ----------------------------------------------------------- }}
<article class="slideshow" data-flex="vertical center" style="background-image: url(/assets/uploads/{{product.collection_id.default_image}});">
  <div class="overlay"></div>
  <h2>{{product.collection_id.title}}</h2>
</article>

{{! -- PRODUCT -------------------------------------------------------------- }}
<article>
  <div class="container">
    {{! -- INFO ------------------------------------------------------------- }}
    <section data-column="5">
      <div class="box">
        <a class="fancybox thumbnail" rel="group" href="/assets/uploads/{{product.default_image}}"><img src="/assets/uploads/{{product.default_image}}" /></a>
      </div>
      <nav class="thumbnails" data-flex="horizontal center">
      {{#product.images}}
        <a class="fancybox thumbnail" rel="group" href="/assets/uploads/{{.}}"><figure class="thumbnail" style="background-image: url(/assets/uploads/{{.}});"></figure></a>
      {{/product.images}}
      </nav>
    </section>

    <section data-column="7" class="box text">
      <h1>{{product.title}}</h1>
      <small><strong>Availability: In stock</strong></small>
      <strong>{{#product.compare_at_price}}<span>{{product.compare_at_price}}{{settings.currency}}</span>{{/product.compare_at_price}}{{product.price}}{{settings.currency}}</strong>
      <p class="wysihtml5">{{{product.description}}}</p>

      <form data-flex="horizontal" method="null">
        <button class="icon minus" data-action="minus"></button>
        <input type="text" name="quantity" value="1" maxlength="2" disabled/>
        <button class="icon plus margin-right" data-action="plus"></button>
        {{! -- Options }}
        {{#product.if.colors}}
        <label>Color:</label>
        <select class="margin-right" name="color">{{#product.colors}}<option>{{.}}</option>{{/product.colors}}</select>
        {{/product.if.colors}}
        {{#product.if.sizes}}
        <label>Size:</label>
        <select class="margin-right" name="size">{{#product.sizes}}<option>{{.}}</option>{{/product.sizes}}</select>
        {{/product.if.sizes}}
        {{! -- /Options }}
        <button class="primary" data-action="add"><span class="icon plus"></span>Add to Cart</button>
      </form>
      <nav>
        {{! -- Extra information }}
        <small>
          <strong>Category:</strong> <a href="/collection/{{product.collection_id.id}}">{{product.collection_id.title}}</a>
        </small>
        {{#product.if.tags}}
        <small>
          <strong>Tags:</strong> {{#product.tags}}<a href="/tag/{{.}}">{{.}}</a> {{/product.tags}}
        </small>
        {{/product.if.tags}}
        {{#product.if.materials}}
        <small>
          <strong>Materials:</strong> {{#product.materials}}<span>{{.}}</span> {{/product.materials}}
        </small>
        {{/product.if.materials}}
      </nav>

    </section>
  </div>

  {{! -- RELATED PRODUCTS ------------------------------------------------- }}
  <h3 class="margin-top">Related products</h3>
  <nav data-shopio="products" data-flex="horizontal center wrap">
    {{#related}}
    <a href="/product/{{id}}" data-flex="vertical center">
      <figure data-flex="vertical center" style="background-image: url(/assets/uploads/{{default_image}});">
        <button>View product</button>
      </figure>
      <strong>{{title}}</strong>
      <small>{{price}}{{settings.currency}}</small>
    </a>
    {{/related}}
  </nav>

  {{! -- REVIEWS ---------------------------------------------------------- }}
</article>
