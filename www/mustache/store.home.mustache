<article data-component="slideshow">
  <div class="overlay"></div>
  <h1>{{settings.name}}</h1>
  <small>{{settings.description}}</small>
</article>

<article data-component="content">
  <h2>Collections</h2>
  <nav data-component="products" class='highlight'>
    {{#collections}}
    <a href="/collection/{{shortcut}}" style="background-image: url(/uploads/{{default_image}});" data-collection={{id}}>
      <h3>{{title}}</h3>
      <small>{{description}}</small>
    </a>
    {{/collections}}
  </nav>
  <h2 class="margin-top">Featured Products</h2>
  {{> partial.products}}
</article>
