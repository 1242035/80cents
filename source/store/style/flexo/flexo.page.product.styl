[data-page="product"]
  article
    section
      // -- Title
      > h1
        margin-bottom                     : 0
        font-size                         : (FONT_SIZE_NORMAL * 2.5)
        font-weight                       : FONT_WEIGHT_BOLD
        text-transform                    : Uppercase
      // -- Price
      > strong
        margin                            : SPACE 0 (SPACE / 4)
        font-size                         : (FONT_SIZE_NORMAL * 1.5)
        font-weight                       : FONT_WEIGHT_BOLD
        > span
          margin-right                    : SPACE
          color                           : lighten(COLOR, 50%)
          text-decoration                 : line-through
      // -- Heading
      > h6
        margin                            : (SPACE * 2) 0 0 0
        font-size                         : (FONT_SIZE_NORMAL * 1.25)
        font-weight                       : FONT_WEIGHT_BOLD
      // -- Description
      > p
        margin                            : (1.5 * SPACE) 0
        font-size                         : 92.5%
        font-weight                       : FONT_WEIGHT_NORMAL
        color                             : lighten(COLOR, 50%)
      // -- Form
      > form
        HEIGHT  = (U / 1.6) !important
        > *
          width                           : auto
          vertical-align                  : top
          height                          : HEIGHT
          line-height                     : HEIGHT
        > label
          display                         : inline-block
        > input
          text-align                      : center
        > button.icon, input
          padding                         : 0px !important
          width                           : HEIGHT
        > button
          &.icon
            font-weight                     : FONT_WEIGHT_NORMAL
            background-color                : BACKGROUND
            &:hover
              background-color              : COLOR
              color                         : WHITE
      // -- Extra Information
      > nav
        > *
          display                           : block

    // -- Images & Figures
    img, figure
      background-color                    : BACKGROUND
    img
      width                               : 100%
    figure
      &.thumbnail
        margin                            : (SPACE / 2)
        height                            : SIZE = (1.25 * U)
        width                             : SIZE
        cursor                            : POINTER
        &:hover
          box-shadow                        0 0 0 6px WHITE, 0 0 0 7px BOX

    // -- Others
    nav
      &.thumbnails
        padding                           : (SPACE / 2)

  #fancybox-loading, .fancybox-close, .fancybox-prev span, .fancybox-next span
    background-image: url('/assets/img/fancybox_sprite.png') !important
  #fancybox-loading div
    background: url('/assets/img/fancybox_loading.gif') center center no-repeat !important
  .fancybox-nav
    background: transparent url('/assets/img/blank.gif') !important
  // .fancybox-overlay
