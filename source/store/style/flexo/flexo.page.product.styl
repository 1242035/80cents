[data-page="product"]
  article
    .box
      // -- Title
      > h1
        margin-bottom                     : 0
        font-size                         : 150%
        font-weight                       : FONT_WEIGHT_BOLD
        text-transform                    : Uppercase
      // -- Price
      > strong
        margin                            : SPACE 0 (SPACE / 4)
        font-size                         : 200%
        font-weight                       : FONT_WEIGHT_BOLD
      // -- Description
      > p
        margin                            : (1.5 * SPACE) 0 (2 * SPACE) 0
        font-size                         : 90%
        color                             : lighten(COLOR, 25%)
      // -- Form
      > form
        > *
          padding                         : 0px !important
          height                          : SIZE = (U / 2) !important
          width                           : SIZE
          text-align                      : center
          border-radius                   : 0px
          vertical-align                  : top
        > button
          font-weight                     : FONT_WEIGHT_NORMAL
          background-color                : BACKGROUND
          &:hover
            background-color              : COLOR
            color                         : WHITE
      // -- Actions
      > nav
        > button
          vertical-align                  : top

    // -- Images & Figures
    img, figure
      background-color                    : BACKGROUND
    img
      width                               : 100%
    figure
      &.thumbnail
        margin                            : (SPACE / 2)
        height                            : SIZE = (1.25 * U)
        width                             : SIZE
        cursor                            : POINTER
        &:hover
          box-shadow                        0 0 0 6px WHITE, 0 0 0 7px BOX

    // -- Others
    nav
      &.thumbnails
        padding                           : (SPACE / 2)

  #fancybox-loading, .fancybox-close, .fancybox-prev span, .fancybox-next span
    background-image: url('/assets/img/fancybox_sprite.png') !important
  #fancybox-loading div
    background: url('/assets/img/fancybox_loading.gif') center center no-repeat !important
  .fancybox-nav
    background: transparent url('/assets/img/blank.gif') !important
  // .fancybox-overlay
  //   background: url('/assets/img/fancybox_overlay.png') !important


/*Retina graphics!*/
@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min--moz-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5)
  #fancybox-loading, .fancybox-close, .fancybox-prev span, .fancybox-next span
    background-image: url('/assets/img/fancybox_sprite@2x.png') !important
    background-size: 44px 152px

  #fancybox-loading div
    background-image: url('/assets/img/fancybox_loading@2x.gif') !important
    background-size: 24px 24px
