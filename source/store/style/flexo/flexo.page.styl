[data-page="page"]
  article
    &:not(.slideshow)
      font-size                         : FONT_SIZE_NORMAL

body
  // -- Article
  > article
    &.slideshow
      position                          : relative
      min-height                        : 45vh
      color                             : WHITE
      background-size                   : cover
      > *
        color                           : WHITE !important
      > :not(div)
        z-index                         : 1
        font-weight                     : bold
      > h2
        margin-top                      : (1.5 * U)
        font-size                       : (U / 1.25)
        text-transform                  : Uppercase
      > .overlay
        z-index                         : 0
        position                        : absolute
        left                            : 0
        width                           : 100%
        top                             : 0
        height                          : 100%
        background                      : url("/assets/img/overlay.png") repeat 0 0

    &:not(.slideshow)
      padding                           : (1.5 * U) 0

    .box
      box-shadow                          0 0 0 1px BOX
      // -- Title
      > h1, >h2
        margin-bottom                     : 0
        font-size                         : 150%
        font-weight                       : FONT_WEIGHT_BOLD
        text-transform                    : Uppercase

      &.text
        padding                         : (2 * SPACE)
        > *
          display                       : block
      &:not(.text)
        padding                         : SPACE

  // -- Figure
  figure
    background-size                     : cover

