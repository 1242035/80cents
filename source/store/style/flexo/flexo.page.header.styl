body
  > header
    z-index                         : 2
    position                        : fixed
    top                             : 0
    left                            : 0
    right                           : 0
    padding                         : 0 SPACE
    height                          : HEADER_HEIGHT
    line-height                     : HEADER_HEIGHT
    background-color                : WHITE
    transition                        all TRANSITION_DURATION
    .logo
      margin-right                  : SPACE
      width                         : 146px
      height                        : 175px
      color                         : THEME
      background-image              : url("/img/logo.png")
      background-size               : cover
      transform                       translateY(0%)
      transition                      all TRANSITION_DURATION

    nav
      a
        padding                     : (SPACE / 2) SPACE
        font-size                   : FONT_SIZE_SMALL
        letter-spacing              : 1px
        font-weight                 : FONT_WEIGHT_BOLD
        text-transform              : Uppercase
        text-align                  : center
        border-radius               : SPACE
        &:not([data-shopio=cart])> .icon
          display                   : none
        &.active, &:hover
          background-color          : THEME !important
          color                     : WHITE
        &[data-shopio=cart]
          background-color          : COLOR
          color                     : WHITE
          text-shadow               : 0 1px 1px rgba(0,0,0,0.25)
          > .icon
            margin-right            : (SPACE / 2)
            vertical-align          : middle
            font-size               : FONT_SIZE_TINY
          > small
            display                 : none
          > strong
            margin-right            : (SPACE / 5)

    &.scroll
      height                        : HEADER_HEIGHT = (HEADER_HEIGHT / 1.5)
      line-height                   : HEADER_HEIGHT
      background-color              : rgba(255,255,255,0.95)
      border-bottom                 : solid 1px BOX
      .logo
        transform                     translateY(-10%)

  &:not([data-page="home"])
    > header nav > a
      margin-right                  : (SPACE / 2)

  &[data-page="home"]
    > header
      nav
        text-align                  : right
        > a
          transition                  color TRANSITION_DURATION
      &:not(.scroll)
        background-color            : transparent
        nav > a
          color                     : WHITE
          &[data-shopio=cart]
            background-color        : THEME

@media screen and (max-device-width: 480px)
  body > header
    background-color                : transparent
    padding                         : 0 (SPACE / 2)
    .logo
      height                        : 104px
      width                         : WIDTH = 90px
      min-width                     : WIDTH
      margin-right                  : 0
    nav
      &[data-shopio=session]
        > a
          &:not([data-shopio=cart])
            padding-left            : SPACE = (SPACE / 1.75)
            padding-right           : SPACE
            margin-right            : 0
            color                   : WHITE
            background-color        : COLOR
            abbr
              display               : none
            .icon
              display               : inline-block
          &[data-shopio=cart]
            margin                  : 0

      &:not([data-shopio=session])
        > a
          display: none

    &.scroll
      background-color              : transparent
      border-bottom                 : none
      nav a
        background-color            : THEME
