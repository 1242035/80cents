[data-atoms=app]
  [data-organism-aside]
    [data-atom-link]
      padding: 0 U
      font-weight: normal
      font-size: FONT_SIZE_TINY
      &:not(.active)
        color: lighten(DARK, 50%)
      &.active
        color: WHITE
        background-color: darken(DARK, 25%)
      > .icon
        color: WHITE
      > small
        background-color: THEME
        font-weight: bold
        color: WHITE
        border-radius: BORDER_RADIUS
