[data-atoms=app]
  [data-atom-li]
    cursor: pointer
    > figure
      background-color: darken(BACKGROUND, 7.5%)
      > .icon
        color: DARK
    strong
      font-weight: FONT_WEIGHT_NORMAL
    span, small
      font-weight: FONT_WEIGHT_THIN

  [data-organism-article] > [data-organism-section]
    [data-atom-li]
      background-color: WHITE
      > div
        > span, > small
          color: darken(BACKGROUND, 40%)

      &.anchor
        color: darken(BACKGROUND, 50%)
        background-color: darken(BACKGROUND, 2.5%)
        font-weight: FONT_WEIGHT_BOLD
      &:not(.anchor)
        color: darken(BACKGROUND, 65%)
      &.thumb
        cursor: pointer
        margin: U
        width: SIZE = (15 * U)
        > figure
          height: (SIZE / 1.2)
          order: -1
      &:not(.thumb)
        &:hover
          background-color        : lighten(THEME, 25%)
          strong, small, span
            color                 : WHITE
        &:last-child
          border-bottom           : none !important
    &:not(.padding) [data-atom-li]
      &:not(.anchor)
        border-bottom: DIVIDER

    &.padding [data-atom-li]
      &.anchor
        background-color: transparent
      &:not(.anchor)
        margin-bottom: .9rem
        border: DIVIDER

    &.no-divider
      border-bottom: none
