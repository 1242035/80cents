[data-atoms=app]
  [data-organism-header]
    > [data-atom-link]
      margin                : 0 0 0 (U / 2)
      padding-right         : 0 !important
      font-size             : SIZE = 1.4rem
      font-weight           : FONT_WEIGHT_NORMAL
      text-transform        : Capitalize
      color                 : lighten(DARK, 50%)
      &:hover
        color               : THEME

  [data-organism-aside]
    [data-atom-link]
      padding               : 0 U
      font-weight           : normal
      font-size             : FONT_SIZE_TINY
      text-transform        : capitalize
      > .icon
        color               : lighten(DARK, 40%)
        font-size           : U !important
        margin-right        : (U / 4)
      > small
        background-color    : darken(DARK, 10%)
        font-size           : FONT_SIZE_TINY
        color               : WHITE
        border-radius       : BORDER_RADIUS

      &:not(.active)
        color               : lighten(DARK, 50%)
      &.active, &:hover
        background-color    : darken(DARK, 25%)
      &.active
        color               : WHITE
        > .icon
          color             : THEME
        > small
          background-color  : THEME

