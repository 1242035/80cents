[data-molecule-div="order"], [data-molecule-div="collection"], [data-molecule-div="product"]
  margin                        : U 0
  > [data-molecule-div], > [data-molecule-form]
    display                     : inline-block
    padding                     : 2%
    vertical-align              : top
  > [data-molecule-div]
    width                       : SIZE = 20%
    max-width                   : SIZE
    > [data-atom-text]
      margin-top                : (U / 3)
      font-size                 : FONT_SIZE_TINY
      line-height               : FONT_SIZE_BIG
      opacity                   : 0.65
  > [data-molecule-form]
    width                       : 70%
    box-shadow                    0 SHADOW_HEIGHT (U / 3) darken(BACKGROUND, 10%)
    border-radius                 BORDER_RADIUS
    > .half
      display                   : inline-block
      width                     : 49% !important
      &:nth-child(odd)
        margin-right            : 2%
    > [data-atom-label] + [data-atom-input][type="checkbox"]
      margin-left               : U
    &.half
      width                       : 32%
      &:nth-child(even)
        margin-left               : 2%


  > [data-atom-label]
    margin-bottom               : U
    width                       : 100%
    height                      : U
    border-bottom               : solid 1px darken(BACKGROUND, 10%)

  > [data-molecule-navigation]
    display                     : block !important
    padding                     : 0 2%
    width                       : 96% !important
    height                      : HEIGHT = auto !important
    text-align                  : right
    > [data-atom-button]
      margin-left               : 2% !important
      width                     : auto !important
      height                    : HEIGHT
